<% content_for :title do %> <%= @club.short_name %>
<% end %>

<%= card do %>
  <%= render 'show', club: @club %>
  <%= link_to 'Edit', edit_club_path(@club), class: 'btn btn-warning', remote: true, data: {toggle: "modal", target: "#ajax-modal"} %>
<% end %>

<%= card _class: 'mt-4', title: 'Application Submissions' do %>
  <%= render 'application_submissions/index', application_submissions: @submissions %>
<% end %>

<%= card _class: 'mt-4', title: 'Members' do %>
  <%= render 'users/index', users: @club.users %>
<% end %>
