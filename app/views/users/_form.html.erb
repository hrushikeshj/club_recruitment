<%= bootstrap_form_with(model: user, local: user.new_record?) do |form| %>
  <% if user.errors.any? %>
    <div class="card">
      <div class="card-header bg-danger text-white">
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </div>

      <div class="card-body">
        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6 col-12">
      <%= form.text_field :name, class: "input"%>
    </div>
    <div class="col-sm-6 col-12">
      <%= form.text_field :roll_no, class: "input" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-12">
      <%= form.text_field :email, class: "input" %>
    </div>
    <div class="col-sm-6 col-12">
      <%= form.select :branch_id, Branch.pluck(:name, :id), {prompt: '-Select Branch-'}, {selected: user.branch_id, class: 'form-select-lg'} %>
    </div>
  </div>  


  <% if can? :admin, User %>
    <%= form.select :club_id, Club.pluck(:name, :id), selected: user.club_id, prompt: '-Select-' %>
    <%= form.collection_check_boxes(:role_ids, Role.all, :id, :name) %>
  <% end %>

  <% if user.new_record? %>
    <div class="row">
      <div class="col-sm-6 col-12">
        <%= form.password_field :password, required: true %>
      </div>
      <div class="col-sm-6 col-12">
      <%= form.password_field :password_confirmation %>
      </div>
    </div>  
  <% end %>

  <div class="text-center">
    <%= form.submit (user.new_record? ? "Register" : "Update"), class: "btn btn-primary" %>
  </div>
<% end %>
