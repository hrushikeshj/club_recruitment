  <div class="card-header" style="background-color: rgb(255 255 255 / 0%);">
    <div class="row" >
      <div class="card-header-title col-6">
        Fill application
      </div>

      <div class="col-6">
        <div role="group" class="btn-group-sm btn-group float-end">
          <%= link_to 'Show', application_path(@application), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

  </div>

  <div class="card-body">
    <%= render 'form', application: @application %>
  </div>
</div>
