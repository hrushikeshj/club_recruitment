<%= bootstrap_form_with(model: [@user, application], local: true) do |form| %>
  <% if application.errors.any? %>
    <div class="card">
      <div class="card-header bg-danger text-white">
        <%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:
      </div>

      <div class="card-body">
        <ul>
          <% application.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <%= form.text_field :applicants_name, value: application.user.name, disabled: true %>
  <%= form.text_field :applicants_roll_no, label: 'Roll no', value: application.user.roll_no, disabled: true %>
  <%= form.text_field :applicants_email, label: 'Email', value: application.user.email, disabled: true %>
  <%= form.text_field :applicants_branch, label: 'Branch', value: application.user.branch.name, disabled: true %>

  
  <%= form.rich_text_area :projects, row: 100, class: "input" %>
  <%= form.rich_text_area :skills, class: "input" %>
  <%= form.text_field :github_link, class: "input" %>

  <%= form.submit %>
<% end %>
<script>
  $(document).ready(()=>{
    $('trix-editor').css("min-height", "250px");
  })
</script>