<p>
  <strong>Subject:</strong>
  <%= @permission.subject %>
</p>

<p>
  <strong>Actions:</strong>
  <ul>
    <% @permission.actions_arr.each do |a| %>
      <li><%= a %></li>
    <% end %>
</ul>
</p>

<p><b>Roles</b></p>

<ul>
  <% @permission.roles.each do |role| %>
    <li><%= role.name %></li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_permission_path(@permission) %> |
<%= link_to 'Back', permissions_path %>
